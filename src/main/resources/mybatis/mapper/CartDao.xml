<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xupt.bookshop.dao.CartDao">

    <insert id="insertCart" parameterType="com.xupt.bookshop.model.cart.Cart">
        INSERT INTO cart (user_name, cart_id)
        VALUES (#{cart.userName},#{cart.cartId})
    </insert>

<insert id="insertCartitem" parameterType="com.xupt.bookshop.model.cart.CartItem">
  INSERT  INTO  cart_item (cart_id,book_id,book_name,price,current_price,buy_num)
  VALUES (#{cartItem.cartId}
  ,#{cartItem.bookId}
  ,#{cartItem.bookName}
  ,#{cartItem.price}
  ,#{cartItem.currentPrice}
  ,#{cartItem.buyNum})
</insert>

    <select id="queryCartDetail" parameterType="String" resultType="com.xupt.bookshop.model.cart.CartItem">
        SELECT * FROM cart_item where cart_id
        in(
         SELECT cart_id
         FROM cart
         where user_name=#{username}
         )
    </select>

    <select id="queryCartDetailsByBookId" parameterType="String" resultType="com.xupt.bookshop.model.cart.CartItem">
        SELECT  * FROM cart_item WHERE book_id=#{bookId}
    </select>
    <select id="queryCartId" parameterType="String" resultType="String">
        select cart_id FROM  cart
        WHERE  user_name=#{username}
    </select>
    <delete id="deleteCategoryItem" parameterType="String">
        DELETE FROM cart_item
        where
        <foreach collection="list" item = "model" open="(" separator="," close=")">
        book_id=#{bookId}
        </foreach>
    </delete>

    <delete id="removeCartItem" parameterType="String">
        DELETE  FROM
        cart
        WHERE
        user_name=#{userName}
    </delete>

  <select id="updateCategoryItem">
      TRUNCATE TABLE cart_item;
  </select>

    <update id="updateCartDetailCount" >
        UPDATE cart_item SET
        buy_num=buy_num+1
        WHERE book_id=#{bookId}
    </update>
</mapper>