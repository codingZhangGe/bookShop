<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xupt.bookshop.dao.LoginDao">

    <resultMap id="userResult" type="com.xupt.bookshop.model.login.User">
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
        <result column="tel" property="tel"/>
        <result column="email" property="email"/>
    </resultMap>

<!--检测用户-->
<select id="queryByName" parameterType="String" resultMap="userResult">
    select user_name,password,tel,email from bookshop.user
    WHERE user_name=#{name}
</select>

<!--注册用户-->
    <insert id="addUser" parameterType="com.xupt.bookshop.model.login.param.RegisterParam">
        INSERT into bookshop.user (user_name,password,email,telphone)
        VALUES (#{user.username},#{user.password},#{user.email},#{user.telphone})
    </insert>




</mapper>