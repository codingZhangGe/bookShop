<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xupt.bookshop.dao.UploadItemDao">
    <sql id="selectField">
        (
        item_id,item_name,old_degree,category_id,seller_qtalk,
        description,start_time,end_time,start_price,
        step_price,reserve_price
        )
    </sql>
    <insert id="insertItem" parameterType="com.xupt.bookshop.model.upload.UploadItem">
        INSERT INTO unfinished_item_fixed_info
        <include refid="selectField"/>
        VALUES(
         #{item.itemId}
        ,#{item.itemName}
        ,#{item.oldDegree}
        ,#{item.categoryId}
        ,#{item.sellerQtalk}
        ,#{item.description}
        ,#{item.startTime,typeHandler=DateTimeTypeHandler}
        ,#{item.endTime,typeHandler=DateTimeTypeHandler}
        ,#{item.startPrice,typeHandler=MoneyTypeHandler}
        ,#{item.stepPrice,typeHandler=MoneyTypeHandler}
        ,#{item.reservePrice,typeHandler=MoneyTypeHandler}
        )
    </insert>
</mapper>